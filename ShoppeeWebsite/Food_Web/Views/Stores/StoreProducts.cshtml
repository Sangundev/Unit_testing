        window.location.href = '/Stores/Indexchat';  // Điều chỉnh đường dẫn tùy theo tên controller của bạn
    });

    var i = 0;
    $(document).on('click', '.btn', function () {
        var ProductID = $(this).data("id");
        alert(ProductID);
        $.ajax({
            url: '/ShoppingCart/AddToCart',
            type: 'POST',
            data: { "id": ProductID },
            success: function (result) {
                console.log('main' + i++);
                swal({
                    title: "Good job!",
                    text: "You clicked the button!",
                    icon: "success",
                });
            },
            error: function (err) {
                alert(err.statusText);
            }
        });
    });


    // Lắng nghe sự kiện khi click vào tab
    document.addEventListener('DOMContentLoaded', function () {
        var tabs = document.querySelectorAll('.nav-link');

        for (var i = 0; i < tabs.length; i++) {
            tabs[i].addEventListener('click', function (event) {
                event.preventDefault();

                var targetTab = event.target.getAttribute('href');

                // Ẩn tất cả các tab-pane
                var tabPanes = document.querySelectorAll('.tab-pane');
                for (var j = 0; j < tabPanes.length; j++) {
                    tabPanes[j].classList.remove('active');
                }

                // Hiển thị tab-pane được chọn
                document.querySelector(targetTab).classList.add('active');
            });
        }
    });

    $(document).ready(function () {
        $("#view-more-btn").click(function () {

            $("#more-comments").show();
            $(this).hide();
        });
    });
</script>

