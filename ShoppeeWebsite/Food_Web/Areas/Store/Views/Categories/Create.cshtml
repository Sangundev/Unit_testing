﻿@model Food_Web.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
}

@using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation" }))
{
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary" style="user-select:none">
                <a href="~/Store/Categories/Index">← Quay lại</a>
            </h6>
            <button type="submit" value="Create" class="btn btn-primary">Thêm</button>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!-- Search -->
            <div class="row">
                <div class="col-md-4">
                    <label class="btn btn-outline-primary btn-block btnChoose">
                        <img src="~/Content/erro.jpg" class="img-fluid rounded" id="preview" style="height: 300px; padding: 20px; border-radius: 15px;"
                             @Html.ValidationMessageFor(m => m.image, "", new { @class = "text-danger", style = "display: block; margin: 5px;" }) />
                        <input type="file" name="Content" required class="form-control" id="images" accept=".png, .jpg, .jpeg" style="display: none;" onchange="showImage(this, document.getElementById('preview'))" />
                        Chọn ảnh
                    </label>
                </div>
                <div class="form-group col-md-4">
                    <label for="Categoryname">Tên Loại :</label>
                    @Html.TextBoxFor(m => m.Categoryname, new { @class = "form-control", style = "width: 250px; padding: 7px 5px;" })
                    @Html.ValidationMessageFor(m => m.Categoryname, "", new { @class = "text-danger", style = "display: block; margin: 5px auto;" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        function showImage(upload, preview) {
            if (upload.files && upload.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $(preview).attr('src', e.target.result);
                }
                reader.readAsDataURL(upload.files[0]);
            }
        }
    </script>
}